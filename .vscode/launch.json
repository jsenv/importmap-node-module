{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "node",
      "type": "node",
      "request": "launch",
      "protocol": "inspector",
      "program": "${file}",
      // "runtimeVersion": "14.5.0",
      "runtimeArgs": [
        "--conditions=development",
        "--unhandled-rejections=strict",
        "--experimental-json-modules",
        "--experimental-top-level-await"
      ],
      "console": "integratedTerminal",
      "autoAttachChildProcesses": true,
      "sourceMaps": true,
      "smartStep": true,
      "skipFiles": [
        // force-array-multiline
        // "node_modules/**",
        "<node_internals>/**"
      ]
    }
  ]
}
